# TryBons/Bonsai Configuration (Claude LLM)
TRYBONS_API_KEY="your-trybons-api-key-here"
TRYBONS_BASE_URL="https://go.trybons.ai/v1"
TRYBONS_CHAT_MODEL="claude-sonnet-4-20250514"

# Cohere Configuration (Embeddings)
COHERE_API_KEY="your-cohere-api-key-here"
COHERE_EMBEDDING_MODEL="embed-english-v3.0"

# Qdrant Cloud Configuration
# Get these from https://cloud.qdrant.io/
QDRANT_URL="https://your-cluster-id.region.cloud.qdrant.io:6333"
QDRANT_API_KEY="your-qdrant-api-key-here"
QDRANT_COLLECTION_NAME="book_chatbot"

# Neon Serverless Postgres Configuration (Optional)
# Get it from: Neon Dashboard -> Connection Details -> Connection string
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require"

# Application Settings
CHUNK_SIZE=400
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
MAX_CONTEXT_LENGTH=4000

# CORS Settings (comma-separated origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,https://hackathon-one-flax.vercel.app"
